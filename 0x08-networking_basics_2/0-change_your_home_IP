#!/bin/bash

# Ensure the script is being run as root
if [ "$EUID" -ne 0 ]; then
  echo "Please run as root"
  exit
fi

# Add localhost entry with 127.0.0.2
echo "127.0.0.2 localhost" >> /etc/hosts

# Add facebook.com entry with 8.8.8.8
echo "8.8.8.8 facebook.com" >> /etc/hosts

# Restart Docker to make sure it picks up the changes
systemctl restart docker

# Print a message indicating the script has run successfully
echo "DNS resolution configured successfully and Docker restarted."

exit 0

